Package: xsdm
Type: Package
Title: A demographic approach to species distribution model
Version: 0.1.0
Authors@R: c(
    person("Emilio", "Berti", , "emilio.berti@idiv.de", role = c("aut"),
           comment = c(ORCID = "0000-0001-9286-011X")),
